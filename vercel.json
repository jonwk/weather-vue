{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@now/node"
        }
    ],
    "redirects": [
        {
            "source": "/",
            "destination": "client.html"
        },
        {
            "source": "/api/(.*)",
            "destination": "server.js"
        }
    ]
}